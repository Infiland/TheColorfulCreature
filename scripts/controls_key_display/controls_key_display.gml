function controls_key_display(key){
switch(key) {
default: keyd = string(key) break;
case("40"): keyd = "Down Key" break;
case("39"): keyd = "Right Key" break;
case("38"): keyd = "Up Key" break;
case("37"): keyd = "Left Key" break;
case("32"): keyd = "Spacebar" break;
case("17"): keyd = "Control" break;
case("13"): keyd = "Enter" break;
case("16"): keyd = "Shift" break;
case("9"): keyd = "Tab" break;
case("18"): keyd = "Alt" break;
case("188"): keyd = "," break;
case("190"): keyd = "." break;
case("191"): keyd = "/" break;
case("27"): keyd = "Um? Why?" break;
case("8"): keyd = "Backspace" break;
}
}